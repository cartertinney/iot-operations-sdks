{
    "version": "0.2",
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "language": "en",
    "allowCompoundWords": true,
    "useGitignore": true,
    "files": ["**/*"],
    "ignorePaths": [
        "*.csproj",
        "*.jq",
        "*.proto", 
        "*.toml",
        "go.(mod|sum|work|work.sum)", 
    ],
    "ignoreRegExpList": 
    [ 
        // ignore gomarkdoc output
        "/^<!-- Code generated by gomarkdoc. DO NOT EDIT -->[\\s\\S]*/",
        // ignore codegen output
        "/<auto-generated>[\\s\\S]*/"
    ],
    "dictionaryDefinitions": [
        { "name": "codegen",   "path": "dictionaries/codegen.txt" },
        { "name": "dotnetsdk", "path": "dictionaries/dotnet.txt"  },
        { "name": "dtdl",      "path": "dictionaries/dtdl.txt"    },
        { "name": "gosdk",     "path": "dictionaries/gosdk.txt"   },
        { "name": "mqtt",      "path": "dictionaries/mqtt.txt"    },
        { "name": "rustsdk",   "path": "dictionaries/rustsdk.txt" }
    ],
    "dictionaries": ["mqtt", "dtdl", "softwareTerms"],
    "overrides": [
        { 
            // *.tt files could be any language
            "filename": "**/*.tt",
            "dictionaries": [ "cpp", "dotnet", "rust", "golang", "java"]
        },
        {
            // codegen directory specific words
            "filename": "codegen/*",
            "dictionaries": ["codegen"]
        }
    ],    
    "languageSettings": [
        {
            // markdown is case sensative and ignore comment blocks
            "languageId": "markdown",
            "ignoreRegExpList": [ "/```[\\s\\S]*?```/gm" ],
            "caseSensitive": true
        },
        {
            // go specific words
            "languageId": "go",
            "dictionaries": ["gosdk"]
        },
        {
            // rust specific words
            "languageId": "rust",
            "dictionaries": ["rustsdk"]
        },        
        {
            // csharp specific words
            "languageId": "csharp",
            "dictionaries": ["dotnetsdk"]
        },
        {
            // only process comments from shell scripts
            "languageId": "shellscript",
            "includeRegExpList": [ "/#.*/g" ]
        }
    ],
    "words": [
        "aarch64",
        "Akri",
        "avrogen",
        "azurecr",
        "cbor",
        "Codegen",
        "codespace",
        "Codespaces",
        "cotype",
        "cotyped",
        "crictl",
        "decapitalize",
        "decapitalizer",
        "dedup",
        "delayable",
        "demultiplexer",
        "demultiplexing",
        "deque",
        "faultable",
        "iotoperations",
        "jetstack",
        "listify",
        "Metl",
        "MSLT",
        "msrc",
        "mqttbroker",
        "mypassword",
        "myvalue",
        "PKID",
        "PKIDs",
        "protobuf",
        "protoc",
        "reauth",
        "reauthenticates",
        "reauthentication",
        "reconnections",
        "REFSTRUCT",
        "repr",
        "resps",
        "retriable",
        "retryable",
        "retrypolicy",
        "rustfmt",
        "sessionclient",
        "standardizer",
        "standardizers",
        "statestore",
        "stringifying",
        "subnamespace",
        "telem",
        "Textualizer",
        "toplevel",
        "triggerable",
        "uncacheable",
        "uniquifiers",
        "unmarshals",
        "unobserve",
        "unobtanium",
        "unparseable",
        "unretriable",
        "unretrievable",
        "unsub",
        "VDEL",
        "wallclock",
        "wakeup"
    ],    
    "ignoreWords": [],
    "import": []
}
